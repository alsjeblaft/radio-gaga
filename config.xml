<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Radio-GAGA</name>
    <description>
      Simple web radio player for my elderly mother, no ads, no popups, no settings.
    </description>
    <author email="szabolcs.kurdi@gmail.com" href="https://github.com/szkrd">
        Szabolcs Kurdi
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="app-icons/output/android/radio_ldpi.png" density="ldpi" />
        <icon src="app-icons/output/android/radio_mdpi.png" density="mdpi" />
        <icon src="app-icons/output/android/radio_hdpi.png" density="hdpi" />
        <icon src="app-icons/output/android/radio_xhdpi.png" density="xhdpi" />
        <icon src="app-icons/output/android/radio_xxhdpi.png" density="xxhdpi" />
        <icon src="app-icons/output/android/radio_xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
</widget>
